<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical"
    android:paddingBottom="4dp">

    <com.silencedut.expandablelayout.ExpandableLayout
        android:id="@+id/expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:expDuration="300"
        app:expExpandScrollTogether="false"
        app:expWithParentScroll="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/cardd"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <custom_font.MyTextView
                                android:id="@+id/trainNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="10dp"
                                android:text="XXXX"
                                android:textColor="#D32F2F"
                                android:textSize="12sp" />

                            <custom_font.MyTextView
                                android:id="@+id/trainName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="10dp"
                                android:text="Train Name"
                                android:textColor="#D32F2F"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <custom_font.MyTextView
                                android:id="@+id/from"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="10dp"
                                android:text="from"
                                android:textColor="#D32F2F"
                                android:textSize="12sp" />

                            <custom_font.MyTextView
                                android:id="@+id/sourceTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="10dp"
                                android:text="XX:XX"
                                android:textColor="#D32F2F"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/rightarrow" />

                            <custom_font.MyTextView
                                android:id="@+id/to"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="10dp"
                                android:text="to"
                                android:textColor="#D32F2F"
                                android:textSize="12sp" />

                            <custom_font.MyTextView
                                android:id="@+id/destTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="10dp"
                                android:text="XX:XX"
                                android:textColor="#D32F2F"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/availableClasses"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true">

                                <custom_font.MyTextView
                                    android:id="@+id/firstac"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@color/colorAccent"
                                    android:gravity="center"
                                    android:text="1A"
                                    android:textColor="#FFF"
                                    android:textSize="17sp" />

                                <custom_font.MyTextView
                                    android:id="@+id/secondac"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@color/colorAccent"
                                    android:gravity="center"
                                    android:text="2A"
                                    android:textColor="#FFF"
                                    android:textSize="17sp" />

                                <custom_font.MyTextView
                                    android:id="@+id/thirdac"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@color/colorAccent"
                                    android:gravity="center"
                                    android:text="3A"
                                    android:textColor="#FFF"
                                    android:textSize="17sp" />

                                <custom_font.MyTextView
                                    android:id="@+id/sleeper"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@color/colorAccent"
                                    android:gravity="center"
                                    android:text="SL"
                                    android:textColor="#FFF"
                                    android:textSize="17sp" />

                                <custom_font.MyTextView
                                    android:id="@+id/secondseating"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@color/colorAccent"
                                    android:gravity="center"
                                    android:text="CC"
                                    android:textColor="#FFF"
                                    android:textSize="17sp" />

                                <custom_font.MyTextView
                                    android:id="@+id/chaircar"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@color/colorAccent"
                                    android:gravity="center"
                                    android:text="2S"
                                    android:textColor="#FFF"
                                    android:textSize="17sp" />
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/downarrow"
                        android:tag="down" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardd"
                android:src="@drawable/finall" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/carddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#FFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Availability will come here" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </com.silencedut.expandablelayout.ExpandableLayout>
</RelativeLayout>